<!-- Global links -->
<li><%= link_to 'About', '/about' %></li>

<!-- Signed in links -->
<% if signed_in? %>
<li><%= link_to "Toss A Line", new_post_path %></li>

<!-- Dropdown menu -->
<li class="dropdown">
  <a href="#" class="dropdown-toggle" data-toggle="dropdown">
    Captain's Log <b class="caret"></b>
  </a>
  <ul class="dropdown-menu">
    <li><%= link_to "Profile", user_path(@current_user) %></li>
    <li><%= link_to "Settings", edit_user_path(@current_user) %></li>
    <li class="divider"></li>
    <li>
      <%= link_to "Set Sail", signout_path, method: "delete" %>
    </li>
  </ul>
</li>

<!-- Not signed in links -->
<% else %>

  <li><%= link_to 'Come Aboard', signup_path %></li>
  <li><%= link_to 'Join the Crew', signin_path %></li>

<% end %>


