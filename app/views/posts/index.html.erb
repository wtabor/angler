<!-- Main page populating with posts -->
<% @posts.each do |post| %>
  <div class="">
    <h2>
      <%= link_to post.title, post %><br>
      <small class="author">Submitted <%= time_ago_in_words(post.created_at) %> by <%= post.user.first_name %> <%= post.user.last_name %></small>
    </h2>
    <div class="btn-group">

    <!-- Click through to link -->
      <!-- <a class="btn btn-default btn-sm" href="<%= post.url %>">Visit Link</a> -->

      <!-- Upvote and Downvote -->
      <%= link_to like_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-up"></span>
        Aye!
        <%= post.get_upvotes.size %>
      <% end %>
      <%= link_to dislike_post_path(post), method: :put, class: "btn btn-default btn-sm" do %>
        <span class="glyphicon glyphicon-chevron-down"></span>
        Aarrgh!
        <%= post.get_downvotes.size %>
      <% end %>
    </div>
  </div>
<% end %>








